<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/progress_animator_demo"
        android:src="@drawable/time"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <!--    <com.we.opengl3d.animator.ProgressAnimatorDemo-->
    <!--        android:id="@+id/progress_animator_demo"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="400dp" />-->

    <com.we.opengl3d.ScaleGestureViewDemo
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.we.opengl3d.MultiPointClickDemo
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/black"
        android:visibility="gone" />

    <com.we.opengl3d.RegionDemo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.we.opengl3d.BezierTestDemo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <com.we.opengl3d.SignatureTestDemo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone" />

    <com.we.opengl3d.PaintUseDemo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:visibility="gone" />

    <com.we.opengl3d.PathDrawDemo
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:visibility="gone" />

    <com.we.opengl3d.PathMeasureDemo
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:visibility="gone" />

    <com.we.opengl3d.PathSearchDemo
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:visibility="gone" />

    <com.we.opengl3d.CameraDrawDemo
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:text="Hello opgl_3d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>